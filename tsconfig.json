{
	"compilerOptions": {
		"allowJs": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"target": "es5",
		"esModuleInterop": true,
		"pretty": true,
		"module": "es2015",
		"isolatedModules": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}